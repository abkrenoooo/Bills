    function Delete(id) {
        $('#Spanpaidup').text(" ");
        $('#SpanDate').text(" ");
        $('#SpanCategoryId').text(" ");
        $('#SpanClientId').text(" ");
        $('#SpanQuantity').text(" ");
        $('#SpanSellingPrice').text(" ");
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this imaginary file!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
