        CheckeValueDiscount();
        if ($("#Date").val() == "" || $("#Date").val() == null || $("#Quantity").val() <= 0 || $("#CategoryId").val() == -1 || $("#ClientId").val() == -1 || $("#SellingPrice").val() <= 0 || parseFloat($("#Net").val())<0) {

        }
